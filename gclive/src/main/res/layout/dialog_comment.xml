<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/room_bottom_linear"
    android:background="@drawable/room_bottom_chat_bg"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/ivEmoji"
        android:layout_width="25dp"
        android:visibility="gone"
        android:layout_height="25dp"
        android:src="@mipmap/ic_zhibojian_shu_emoji_click"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="4dp"
        android:gravity="center_vertical"
        android:background="@drawable/room_chat_edit_bg">
        <EditText
            android:id="@+id/comment_edit"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:paddingLeft="6dp"
            android:imeOptions="flagNoExtractUi"
            android:paddingRight="6dp"
            android:hint="@string/hint_room_chat"
            android:inputType="text"
            android:maxLength="50"
            android:singleLine="true"
            android:maxLines="1"/>
        <ImageView
            android:id="@+id/comment_commit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="center"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_hor_room_ban_send_danmu_selector"/>
    </LinearLayout>

</LinearLayout>