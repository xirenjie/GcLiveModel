<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:gravity="bottom"
    android:orientation="vertical">
    <com.guocai.gclive.view.MyViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:background="#bb000000"
        android:layout_height="wrap_content">
    </com.guocai.gclive.view.MyViewPager>
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#bb000000"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="5dp"
            android:button="@null"
            android:background="@drawable/bg_radio"
            android:layout_marginRight="5dp"
            android:layout_height="5dp" />
        <RadioButton
            android:layout_width="5dp"
            android:button="@null"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_radio"
            android:layout_height="5dp" />
        <RadioButton
            android:layout_width="5dp"
            android:button="@null"
            android:background="@drawable/bg_radio"
            android:layout_height="5dp" />
    </RadioGroup>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#bb000000"
        android:layout_height="40dp">

        <TextView
            android:drawableLeft="@mipmap/icon_dimen"
            android:id="@+id/common_gift_bean_num"
            android:layout_width="wrap_content"
            android:text=" 1"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/comment_check_img"
            android:layout_width="40dp"
            android:layout_centerInParent="true"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/comment_num_linear"
            android:layout_width="120dp"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/linear_border_bg"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/common_gift_num"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/red"
                android:layout_alignParentRight="true"
                android:text="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/common_gift_send"
                android:background="@drawable/linear_border_red_bg"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:text="赠送"
                android:layout_height="match_parent" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>